doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width', 'initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
    //script(src='/js/paletteChecker.js')

  body
    nav.navbar.navbar-expand-sm.fixed-top.navbar-light
      a.navbar-brand(href='/') Systems Life
      button.navbar-toggler#toggler-bone(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item(class=title=='Home' ? 'active' : undefined )
            a.nav-link(href='/' style='color:#F8F8FF')
              | Home
              span.sr-only (current)
          li.nav-item(class=title=='About' ? 'active' : undefined )
            a.nav-link(href='/About' style='color:#F8F8FF') About
          li.nav-item(class=title=='Services' ? 'active' : undefined )
            a.nav-link(href='/Services' style='color:#F8F8FF') Services
          li.nav-item
            a.nav-link(href='/Contact' style='color:#F8F8FF') Contact
    main(role="main" class='container')
      script(src='/jquery/jquery.js')
      script(src='/bootstrap/js/bootstrap.js')
      block content

